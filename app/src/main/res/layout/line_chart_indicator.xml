<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_indicator"
    android:layout_width="122dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_99ffffff_border_corner8"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:padding="8dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/indicator_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="#1A1A1B"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        tools:text="10.21 4:00" />

    <RelativeLayout
        android:id="@+id/indicator_item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/iv_label_item_left"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="#2A55E5"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_label_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/iv_label_item_left"
            android:textColor="#64666B"
            tools:text="转化成本" />

        <TextView
            android:id="@+id/tv_value_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#1A1A1B"
            tools:text="8.14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/indicator_item_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/iv_label_item_right"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="#79D90C"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_label_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/iv_label_item_right"
            android:textColor="#64666B"
            tools:text="现金消耗" />

        <TextView
            android:id="@+id/tv_value_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#1A1A1B"
            tools:text="1800" />

    </RelativeLayout>


</LinearLayout>