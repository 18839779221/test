<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_indicator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="2dp">

    <View
        android:id="@+id/iv_label_item"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="#2A55E5"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_label_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/iv_label_item"
        android:textColor="#64666B"
        android:textSize="12sp"
        tools:text="转化成本" />

    <TextView
        android:id="@+id/tv_value_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textColor="#1A1A1B"
        tools:text="8.14" />
</RelativeLayout>